<?xml version="1.0" encoding="utf-8" ?>
<views:Popup
    x:Class="NuSocial.Views.LoadingIndicatorPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NuSocial.Helpers"
    xmlns:views="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    CanBeDismissedByTappingOutsideOfPopup="false"
    Size="200, 80"
    Color="{StaticResource SecondaryCardBackgroundColor}">
    <Grid Padding="20" ColumnDefinitions="40, 10, *">
        <ActivityIndicator Grid.Column="0" IsRunning="True" />
        <Label
            x:Name="loadingIndicatorLabel"
            Grid.Column="2"
            HorizontalOptions="CenterAndExpand"
            HorizontalTextAlignment="Center"
            Text="{local:Translate Loading}"
            VerticalOptions="Center" />
    </Grid>
</views:Popup>
